<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="16dp"
    tools:context="com.example.alphadude.jambcbt.Welcome.FrontScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ENTER ACCESS PIN"
                android:textStyle="bold"
                android:textColorHint="#09c"
                android:textAlignment="center"
                />
        </android.support.design.widget.TextInputLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="25dp">
    <CheckBox
        android:id="@+id/chkAgree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text=" I agree to the "
        android:textSize="18sp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="0dp"
        android:text="Terms and Conditions"
        android:textColor="#e27144"
        android:layout_weight="1"
        android:textSize="18sp"
        android:layout_height="wrap_content" />

</LinearLayout>

        <Button
            android:id="@+id/startTest"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:text="start test"
            android:textStyle="bold"
            android:layout_marginBottom="25dp"
            android:textColor="#fff"
            android:background="#2c59df"
            android:layout_gravity="center_horizontal"/>


   <android.support.v7.widget.CardView
       android:layout_marginTop="45dp"
       android:layout_width="match_parent"
       android:layout_marginLeft="50dp"
       android:background="#938c8c"

       android:layout_marginRight="50dp"
       android:layout_height="wrap_content"
       app:cardCornerRadius="4dp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#f2eded"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="30dp">
              <ImageButton
                  android:layout_width="35dp"
                  android:layout_height="35dp"
                  android:background="#f2eded"
                  android:src="@drawable/ic_apps"
                  />

               <TextView
                   android:layout_width="0dp"
                   android:text="FREE DEMO PRACTICE"
                   android:textColor="#09c"
                   android:layout_gravity="center"
                   android:textStyle="bold"
                   android:layout_weight="1"
                   android:textSize="18sp"
                   android:layout_height="wrap_content"
                 />


           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="10dp">
               <ImageButton
                   android:layout_width="35dp"
                   android:background="#f2eded"
                   android:layout_height="35dp" />

               <TextView
                   android:layout_width="0dp"
                   android:text="GET ACCESS PIN"
                   android:textColor="#e44f14"
                   android:layout_marginTop="6dp"
                   android:layout_weight="1"
                   android:textStyle="bold"
                   android:textSize="18sp"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="50dp"/>


           </LinearLayout>

       </LinearLayout>

   </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="80dp">
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="0dp"
                android:text="Jamb Cbt.2017.com "
                android:textColor="#000"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </LinearLayout>

</ScrollView>
